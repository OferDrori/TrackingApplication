<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTrackerActivity"
    android:background="#F8F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginTop="16px">

        <TextView
            android:id="@+id/createNewGroup_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Create New Tracker"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >



        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </FrameLayout>

            <EditText
                android:id="@+id/addTracker_TrackerName_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="35dp"
                android:inputType="textPersonName"
                android:hint="Tracker Name" />




            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </FrameLayout>

            <Button
                android:id="@+id/addTracker_btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_cornern_new"
                android:gravity="center"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:text="Create"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"></Button>


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>