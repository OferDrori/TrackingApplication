<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListOfTrackersActivity"
    android:background="#F8F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginTop="16px">

        <TextView
            android:id="@+id/ListOfTrackersActivity_welcome_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="choose what to do "
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/textView_view_his_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="view his location"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/textView_view_his_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="view his image"
                android:textSize="30dp"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>